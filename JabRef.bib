issn = {00295515},
journal = {Nuclear Fusion},
number = {3},
title = {{Observations of impurity toroidal rotation suppression with ITB formation in ICRF and ohmic H mode Alcator C-Mod plasmas}},
volume = {41},
year = {2001}
}
