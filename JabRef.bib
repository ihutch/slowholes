issn = {21699402},
journal = {Journal of Geophysical Research: Space Physics},
keywords = {BGK,electron phase-space holes,multispacecraft,solitary waves},
number = {12},
pages = {9963--9978},
title = {{Electron Phase-Space Holes in Three Dimensions: Multispacecraft Observations by Magnetospheric Multiscale}},
volume = {123},
